<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ow_black</item>
        <item name="colorPrimaryDark">@color/ow_black</item>
        <item name="colorAccent">@color/ow_light_orange</item>
        <item name="android:background">@color/ow_black</item>
        <item name="android:textColor">@color/ow_orange</item>

        <item name="android:editTextColor">@color/ow_orange</item>
        <item name="android:textColorHint">@color/ow_light_orange</item>

    </style>

    <style name="TitleTheme"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ow_orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
